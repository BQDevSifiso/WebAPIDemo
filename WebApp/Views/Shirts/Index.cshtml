@model List<Shirt>

<h3>Shirts</h3>
<br />
<table class="table table-striped">
    <thead>
        <tr>Brand</tr>
        <tr>Gender</tr>
        <tr>Color</tr>
        <tr>Size</tr>
        <tr>Price</tr>
    </thead>
    <tbody>
        @foreach(var shirt in Model)
        {
            <tr>
                <td>@shirt.Brand</td>
                <td>@shirt.Gender</td>
                <td>@shirt.Color</td>
                <td>@shirt.Size</td>
                <td>@(shirt.Price.HasValue?shirt.Price.Value.ToString("c"): "")</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="shirt" asp-action="createshirt">Create</a>